pipeline {
    agent { label 'docker' }

    triggers {
        pollSCM('H/5 * * * *') // Optional: use webhook for better efficiency
    }

    environment {
        DOCKER_REGISTRY = 'registry.local'
        DOCKER_IMAGE = 'mockplant'
        DOCKER_TAG = 'latest'
    }

    stages {
        // Remove this stage: Jenkins already does the checkout for you
        // stage('Checkout Code') {
        //     steps {
        //         git credentialsId: 'forgejo-id', url: 'http://forgejo.local/Neo/MockPlant.git'
        //     }
        // }

        stage('Build Docker Image') {
            steps {
                sh """
                    docker build -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG} .
                """
            }
        }

        stage('Push Docker Image') {
            steps {
                sh """
                    docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}
                """
            }
        }

        stage('Pull Image to Verify') {
            steps {
                sh """
                    docker pull ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}
                """
            }
        }
    }

    post {
        always {
            sh 'docker system prune -af || true'
        }
    }
}
