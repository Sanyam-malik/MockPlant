pipeline {
    agent { label 'docker' }

    triggers {
        pollSCM('H/5 * * * *') // Optional: use webhook instead
    }

    environment {
        DOCKER_REGISTRY = 'registry.local'
        DOCKER_IMAGE = 'mockplant'
        DOCKER_TAG = 'latest'
    }

    // Run pipeline only for main branch
    options {
        skipDefaultCheckout() // avoid default checkout unless on 'main'
    }

    stages {
        stage('Build & Deploy') {
            when {
                branch 'main'
            }
            stages {
                stage('Build Docker Image') {
                    steps {
                        sh """
                            docker build -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG} .
                        """
                    }
                }

                stage('Push Docker Image') {
                    steps {
                        sh """
                            docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}
                        """
                    }
                }

                stage('Pull Image to Verify') {
                    steps {
                        sh """
                            docker pull ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            sh 'docker system prune -af || true'
        }
    }
}
